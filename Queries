------------- QUERIES 

--1) SELECIONANDO DADOS DE MAIS DE UMA TABELA
SELECT C.IDCLIENTE,C.NOME,A.MODELO,A.PLACA
FROM CLIENTE C
INNER JOIN AUTOMOVEL A
ON C.IDCLIENTE = A.ID_CLIENTE;
	
	
-- 2) Filtros com WHERE Statement
select * from pedido where IDPEDIDO = 1;


-- 3) Defina ordenações dos dados com ORDER BY
select NOME,CODIGO,ESPECIALIDADE
from FUNCIONARIO 
order by NOME ASC;

---4) INNER JOIN + ORDER BY
SELECT C.IDCLIENTE,C.NOME,A.MODELO,A.PLACA
FROM CLIENTE C
INNER JOIN AUTOMOVEL A
ON C.IDCLIENTE = A.ID_CLIENTE
ORDER BY C.NOME ASC;

----- 5) VALOR TOTAL DOS SERVICOS PRESTADOS PARA OS AUTOMOVEIS CADASTRADOS
SELECT SUM(VALOR) AS "VALOR TOTAL DE VENDAS"
FROM TABELA_DE_PRECOS;

----- 6) MÉDIA TOTAL DOS SERVICOS PRESTADOS PARA OS AUTOMOVEIS CADASTRADOS + UTILIZAÇÃO DO TRUNCATE
SELECT TRUNCATE(AVG(VALOR),1) AS "MÉDIA TOTAL DE VALOR GANHO"
FROM TABELA_DE_PRECOS;

------ 7) CONTANDO E APRESENTANDO A QUANTIDADE DE MODELOS DISTINTOA DE AUTOMOVEIS CADASTRADOS
select modelo, count(*) AS "QUANTIDADE"
from automovel
group by modelo;

----- 8) SELECIONANDO O MAIOR VALOR DE SERVICO PRESTADO DENTRE OS AUTOMOVEIS CADASTRADOS
SELECT MAX(VALOR) AS "MAIOR VENDA"
FROM TABELA_DE_PRECOS;

----- 9) SELECIONANDO O MENOR VALOR DE SERVICO PRESTADO DENTRE OS AUTOMOVEIS CADASTRADOS
SELECT MIN(VALOR) AS "MENOR  VALOR"
FROM TABELA_DE_PRECOS;

----- 10) UNINDO AS FUNÇÕES DE AGREGAÇÃO
SELECT MAX(VALOR) AS "MAIOR VENDA",
       MIN(VALOR) AS "MENOR VENDA",
	   TRUNCATE(AVG(VALOR),1) AS "MÉDIA DE VALOR GANHO"
	   FROM TABELA_DE_PRECOS;
